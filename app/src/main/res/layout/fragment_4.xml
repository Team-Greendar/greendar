<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_point"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="Setting"
            android:layout_marginLeft="110dp"
            android:textColor="#ABABAB"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/accountImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Account"
            android:layout_toRightOf="@+id/accountImage"
            android:textColor="#000000"
            android:textSize="13dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_page"
            android:backgroundTint="#00000000"
            android:layout_toRightOf="@id/accountImage"
            android:layout_marginLeft="280dp"/>
    </RelativeLayout>
    <View
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="#ABABAB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/bellimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Notice"
            android:layout_toRightOf="@id/bellimage"
            android:textColor="#000000"
            android:textSize="13dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bellimage"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="280dp"
            android:src="@drawable/next_page" />
    </RelativeLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="#ABABAB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/information" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Information"
            android:layout_toRightOf="@id/information"
            android:textColor="#000000"
            android:textSize="13dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/information"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="280dp"
            android:src="@drawable/next_page" />
    </RelativeLayout>
    <View
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="#ABABAB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Version"
            android:textColor="#000000"
            android:textSize="13dp"/>
    </RelativeLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="#ABABAB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Log Out"
            android:textColor="#FF0B0B"
            android:textSize="13dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="330dp"
            android:src="@drawable/next_page" />
    </RelativeLayout>
</LinearLayout>