<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bottom_left_right_corners_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:text="Find your
                          Friends!"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share your checklist with your friends! :)"
            android:textSize="10dp"
            android:paddingLeft="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>



        <EditText
            android:background="@drawable/corners_22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:hint="Enter friend's nickname"
            android:textColor="#A8A6A6"
            android:textSize="15dp"
            android:gravity="center"
            android:inputType="textEmailAddress"/>

    </LinearLayout>
</LinearLayout>